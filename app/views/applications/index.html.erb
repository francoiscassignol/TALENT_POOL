<%= render 'banner' %>

<h1 class="text-center">Applications</h1>

<div class="container margin-bottom text-center">
	<div class="row">
		<span class="label label-primary"><%= @job_offer.job_title%></span>
		<span class="label label-default"><%= @job_offer.location%></span>
		<span class="label label-default"><%= @job_offer.category%></span>
	</div>
</div>


<div class="container">
  <div class="row">
    <% @applications.each do |app| %>
      <div class="col-sm-4">
        <div class="card">
          <div class="card-content">
            <div class="margin-bottom">
              <h2 class=""><strong><%= app.first_name %> <%= app.last_name %></strong></h2>
              <p class="small-interlignage"><strong><%= app.email %></strong></p>
              <p class="small-interlignage"><strong>Status: <%= app.status %></strong></p>
            </div>
            <%= link_to "Application details", application_path(app.id), class: "btn btn-primary" %>
            </div>
          </div>
        </div>
       <% end %>
    </div>
</div>

<div class="text-center">
	<%= link_to "Back to job offers", job_offers_path, class: "btn btn-default" %>
</div>
