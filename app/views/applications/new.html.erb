<div class="row">
  <div class="col-md-6 col-md-offset-3">

    <h1>My Application</h1>

    <%= simple_form_for([@job_offer, @application]) do |f| %>
      <div class="form-group">
        <%= f.input :first_name, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.input :last_name, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.input :email, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.input :phone_number, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.input :street, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.input :post_code, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.input :city, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.input :country, collection: Application::COUNTRY, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.input :profile_picture %>
        <%= f.input :profile_picture_cache, as: :hidden %>
      </div>

      <div class="form-group">
        <%= f.input :resume %>
        <%= f.input :resume_cache, as: :hidden %>
      </div>

      <div class="form-group">
        <%= f.input :website, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.input :linkedin, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.input :cover_letter, class: 'form-control' %>

      </div>


      <div class="text-center"><%= f.submit class: 'btn btn-primary' %>
      <%= link_to "Back to job offers", job_offers_path, class: "btn btn-default" %>
      </div>
    </div>
  <% end %>
</div>


