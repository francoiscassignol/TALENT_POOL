<div class="container">
  <div class="col-md-6 col-md-offset-3">

    <h3>My Application</h3>
      <div class="box_form">
        <%= simple_form_for([@job_offer, @application]) do |f| %>
        <h4>My status</h4>
        <div class="second_form">
          <div class="form-group">
            <%= f.input :status, collection: Application::STATUS %>
          <div class="form-group">
        </div>
        <h4 class="text-left">My personnal informations</h3>
        <div class="second_form">
          <div class="row">
            <div class="col-md-6">
              <div class="form-group">
                <%= f.input :first_name, class: 'form-control', placeholder: 'Mickey' %>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <%= f.input :last_name, class: 'form-control', placeholder: 'Mouse'%>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-8">
              <div class="form-group">
                <%= f.input :email, class: 'form-control', placeholder: 'mickey.mouse@disney.com' %>
              </div>
            </div>
            <div class="col-md-4">
              <div class="form-group">
                <%= f.input :phone_number, class: 'form-control', placeholder: '12345678' %>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-8">
              <div class="form-group">
                <%= f.input :street, class: 'form-control', placeholder: '36 mouse street' %>
              </div>
            </div>
            <div class="col-md-4">
              <div class="form-group">
                <%= f.input :post_code, class: 'form-control', placeholder: '12345' %>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-8">
              <div class="form-group">
                <%= f.input :city, class: 'form-control', placeholder: 'Orlando' %>
              </div>
            </div>
            <div class="col-md-4">
              <div class="form-group">
                <%= f.input :country, collection: Application::COUNTRY, class: 'form-control', placeholder: 'US' %>
              </div>
            </div>
          </div>
        </div>
        </div>
        <div class="box_form">
          <h4 class="text-left">My profile</h4>
          <div class="second_form">

          <div class="row">
            <div class="col-md-6">
              <div class="form-group">
                <%= f.input :profile_picture %>
                <%= f.input :profile_picture_cache, as: :hidden %>
              </div>
            </div>

            <div class="col-md-6">
              <div class="form-group">
                <%= f.input :resume %>
                <%= f.input :resume_cache, as: :hidden %>
              </div>
            </div>
          </div>

          <div class="form-group">
            <%= f.input :website, class: 'form-control', placeholder: 'https://mickey.disney.com/' %>
          </div>

          <div class="form-group">
            <%= f.input :linkedin, class: 'form-control', placeholder: 'https://www.linkedin.com/in/mickey-mouse-45744b16a/' %>
          </div>

          <div class="form-group">
            <%= f.input :cover_letter, class: 'form-control' %>

          </div>
        </div>
      </div>

      <div class="text-center"><%= f.submit class: 'btn btn-primary' %>
      <%= link_to "Back to job offers", job_offers_path, class: "btn btn-default" %>
      </div>
    </div>
  <% end %>
</div>


