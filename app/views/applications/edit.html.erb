<%= simple_form_for @application do |f| %>
  <%= f.input :first_name   %>
  <%= f.input :last_name  %>
  <%= f.input :status, collection: Application::STATUS %>
  <%= f.input :email %>
  <%= f.input :phone_number %>
  <%= f.input :street  %>
  <%= f.input :post_code %>
  <%= f.input :city  %>
  <%= f.input :country, collection: Application::COUNTRY %>
  <%= f.file :profile_picture  %>
  <%= f.file :resume  %>
  <%= f.input :website %>
  <%= f.input :linkedin  %>
  <%= f.input :cover_letter  %>
  <%= f.submit "Edit", class: "btn btn-primary" %>
<% end %>

