<% if user_signed_in? %>
     <% if params[:controller] == "job_offers" && params[:action] == "index" %>
        <%= link_to "Create an opportunity", new_job_offer_path, class: "btn btn-primary"  %>
     <% elsif params[:controller] == "job_offers" && params[:action] == "show"%>
        <%= link_to "Edit", edit_job_offer_path(job_offer) , class: "btn btn-primary" %>
        <%= link_to "Delete", job_offer_path(job_offer), method: :delete, class: "btn btn-primary", data: { confirm: "sure?" } %>
      <% end %>
   <% else %>
      <% if params[:controller] == "job_offers" && params[:action] == "index" %>
        <%= link_to "Recruiters", new_user_session_path, class: "btn btn-default" %>
      <% elsif params[:controller] == "job_offers" && params[:action] == "show" %>
        <%= link_to "Apply to this job", new_job_offer_application_path(job_offer.id), class: "btn btn-primary" %>
      <% end %>
   <% end %>
